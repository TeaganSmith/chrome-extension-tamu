{
    "manifest_version": 3,
    "name": "Security Scanner",
    "version": "1.0",
    "permissions": ["tabs", "activeTab", "storage", "webRequest"],
    "host_permissions": [
      "https://*.datadoghq.com/*",
      "https://safebrowsing.googleapis.com/*"
    ],
    "background": {
      "service_worker": "background.js"
    },

    "content_scripts": [
      {
          "matches": ["<all_urls>"],
          "js": ["content.js"]
      }
  ],
  
    "action": {
      "default_popup": "popup.html"
    },
    "icons": {
    }
  }
  