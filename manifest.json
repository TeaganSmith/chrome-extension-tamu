{
    "manifest_version": 3,
    "name": "Security Scanner",
    "version": "1.0",
    "permissions": ["tabs", "activeTab", "notifications", "storage", "webRequest"],
    "background": {
      "service_worker": "background.js"
    },
    "host_permissions": [
      "https://*/*"
    ],
    "content_scripts": [
      {
          "matches": ["<all_urls>"],
          "js": ["content.js"]
      }
    ],
  
    "action": {
      "default_popup": "popup.html",
      "default_icon": "logo.png"
    },
    "icons": {
    }
  }
  